<mvc:View controllerName="app.miningproject.controller.FormView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">
    <Page title="Form View">
            <f:SimpleForm>
                <Label text="Location Description" design="Bold" class= "Bold-class"></Label>
                <Input text="idFormLocation"></Input>
                <Text text="{MiningModel>Location Description}"></Text>
                <Label text="Resource Allocated" design="Bold" class= "Bold-class"></Label>
                <Input text="idFormResource"></Input>
                <Text text="{MiningModel>Mining Resource allocated}"></Text>
                <Label text="Total Cost" design="Bold" class= "Bold-class"></Label>
                <Input text="idFormTotalCost"></Input>
                <Text text="{MiningModel>Total cost}"></Text>
            </f:SimpleForm>
           
 
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button text="Submit"/>
            </OverflowToolbar>
        </footer>  
    </Page>
</mvc:View>